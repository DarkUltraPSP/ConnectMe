{% extends "base.html.twig" %}

{% block body %}
    <div class="flex flex-col justify-around content-wrapper w-1/2 h-5/6 shadow-2xl p-10 rounded-3xl bg-[#e0e0e0]">
        <div class="photo h-[20%] flex flex-col items-center ">
            <img src="" class="w-1/2 h-full mx-auto rounded-full">
        </div>
        <div class="identity h-[70%] overflow- scrollbar mt-4 w-full border-2 border-gray-500 bg-[#ebebeb] overflow-auto p-4">
            <div class="lname">
                <div> Nom : {{ contact.lname }}</div>
            </div>
            <div class="fname">
                <div> Prénom {{ contact.fname }}</div>
            </div>
            <div class="mail">
                <div> Mail : {{ contact.mail }}</div>
            </div>
            <div class="tel">
                <div> Téléphone : {{ contact.tel }}</div>
            </div>
            <div class="group">
                <div> Groupe : {{ contact.groupe.groupName }} </div>
            </div>
            <div class="additionalFields">
                {# Faire un for ici sur add fields #}
                {% for field in fields %}
                    {% include "Contact/addFields.html.twig" %}
                {% endfor %}
            </div>
        </div>
        <div class="flex justify-end items-end h-[10%]">
            <a href="{{ path('app_add_fields', {id: contact.id}) }}" class="bg-[#003366] hover:bg-[#1c5186] text-white rounded px-3 py-0.5 ease-in-out duration-150 hover:scale-110 ">
            <i class="fa-solid fa-circle-plus"></i>
            Ajouter un champ
        </a>
        </div>
    </div>
{% endblock %}